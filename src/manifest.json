{
  "manifest_version": 3,
  "name": "Sozu Wallet",
  "version": "1.0.0",
  "description": "Sozu Wallet Chrome Extension - Seamlessly integrated with X.com",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/images/sozu-logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.twitter.com/*",
    "https://api.twitter.com/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "popup.html",
      "oauth-callback.html"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "assets/images/sozu-logo.png",
    "48": "assets/images/sozu-logo.png",
    "128": "assets/images/sozu-logo.png"
  }
} 