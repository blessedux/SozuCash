{
  "manifest_version": 3,
  "name": "Sozu Wallet",
  "version": "1.0.0",
  "description": "Sozu Wallet Chrome Extension",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.auth0.com/*",
    "https://your-backend-url/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 