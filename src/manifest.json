{
  "manifest_version": 3,
  "name": "Sozu Wallet",
  "version": "1.0.0",
  "description": "Sozu Wallet Chrome Extension",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "assets/sozu-logo.png"
    ],
    "matches": ["<all_urls>"]
  }]
} 