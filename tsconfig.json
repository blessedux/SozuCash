{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "types": ["chrome"]
  },
  "include": [
    "src/**/*.ts",
    "twitter-injection/**/*.ts"
  ]
}
