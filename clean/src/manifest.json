{
  "manifest_version": 3,
  "name": "SozuCash Wallet",
  "version": "1.0.0",
  "description": "SozuCash Wallet Chrome Extension with Twitter Integration",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["assets/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "identity",
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": [
      "src/popup/index.html",
      "assets/*.js",
      "assets/*.css",
      "assets/images/*",
      "assets/icons/*",
      "src/oauth-callback.html"
    ],
    "matches": ["https://*.twitter.com/*", "https://*.x.com/*", "https://oauth.twitter.com/*"]
  }],
  "icons": {
    "16": "assets/icons/mantle-mnt-logo.svg",
    "48": "assets/icons/mantle-mnt-logo-med.png",
    "128": "assets/icons/mantle-mnt-logo-big.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://my.spline.design; connect-src https://*.spline.design https://*.twitter.com https://api.twitter.com;"
  },
  "externally_connectable": {
    "matches": ["https://twitter.com/*", "https://x.com/*"]
  },
  "oauth2": {
    "client_id": "YOUR_TWITTER_CLIENT_ID",
    "scopes": ["tweet.read", "users.read"]
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://api.twitter.com/*"
  ]
} 